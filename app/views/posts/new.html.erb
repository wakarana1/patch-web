<h1>Post.new</h1>

<% flash.each do |key, value| %>
	<div class="<%= key %>"><%= value %></div>
<% end -%>

<%= form_for @post, url: create_post_path do |f| %>
	<div class="form-group">
		<%= f.text_area :body, class: "form-control" %>
	</div>

	<%= f.submit "Submit", class: "btn btn-warning" %>

<% end -%>