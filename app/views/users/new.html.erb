<%= form_for @user, url: create_user_path do |f| %>
	<div class="container">
		<div class="row">
		    <%= f.label :email, class: "col-sm-2"%>
		    <%=f.email_field :email%>
		</div>
			<br>
		<div class="row">	
		    <%= f.label :password, class: "col-sm-2"%>
		    <%=f.password_field :password %>
		</div>	
			<br>
		<div class="row">
		    <%= f.label :password_confirmation, "Confirm", class: "col-sm-2"%>
		    <%=f.password_field :password_confirmation%>
		</div>	
			<br>
		    <%= f.submit "Register", class: "btn btn-success" %>

</div>
<% end%>